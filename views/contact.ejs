<!-- Contact Page -->
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-primary"><i class="bi bi-chat-left-text"></i> Contact Us</h1>
        <p class="lead mb-4">We’re here to assist you! Please feel free to reach out to us for any inquiries, support, or feedback. We’ll get back to you as soon as possible.</p>
    </div>

    <!-- Contact Form -->
    <form action="/submit-contact" method="POST">
        <div class="row">
            <!-- Email Address -->
            <div class="col-md-6 mb-4">
                <label for="email" class="form-label"><strong>Your Email Address:</strong></label>
                <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Your Email" required>
            </div>

            <!-- Subject -->
            <div class="col-md-6 mb-4">
                <label for="subject" class="form-label"><strong>Subject:</strong></label>
                <input type="text" class="form-control form-control-lg" id="subject" name="subject" placeholder="Subject" required>
            </div>
        </div>

        <!-- Message -->
        <div class="mb-4">
            <label for="message" class="form-label"><strong>Your Message:</strong></label>
            <textarea class="form-control form-control-lg" id="message" name="message" rows="5" placeholder="Type your message here..." required></textarea>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary">Send Message</button>
        </div>
    </form>

    <!-- Contact Details Section -->
    <div class="mt-5 text-center">
        <h2 class="text-secondary">Need More Info?</h2>
        <p class="lead">You can also reach us through our social media channels or by sending us a direct email at <strong>support@example.com</strong>. We look forward to hearing from you!</p>
        
        <!-- Social Media Icons -->
        <div class="d-flex justify-content-center">
            <a href="https://github.com" target="_blank" class="btn btn-outline-dark mx-2">
                <i class="bi bi-github"></i> GitHub
            </a>
            <a href="https://twitter.com" target="_blank" class="btn btn-outline-info mx-2">
                <i class="bi bi-twitter"></i> Twitter
            </a>
            <a href="https://www.linkedin.com" target="_blank" class="btn btn-outline-primary mx-2">
                <i class="bi bi-linkedin"></i> LinkedIn
            </a>
        </div>
    </div>
</div>
